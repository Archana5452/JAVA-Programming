import java.util.Scanner;
public class Main
{
  public static void main(String args[])
  {
    Scanner sc=new Scanner(System.in);
    int r;
    double a;
    double p;
   System.out.println("enter radius: ");
   r=sc.nextInt();
   a=3.14*r*r;
   p=2*3.14*r;
   System.out.println("Area ofcircle= "+a);
   System.out.println("Perimeter of circle= "+p);
  }
}
